<header class="chat-header">
<figure class="chat-logo" alt="chat logo">
  <img src="<%= asset_path("#{@chat.avatar}") %>" width="45" height="45" alt="chat logo">
</figure>

<section class="chat-descriptors">
  <h1><%= @chat.title %></h1>
  <h2><%= @chat.description %></h2>
</section>

<section class="chat-tools">
  <a class="chat-settings chat-options" href="#">
    O
  </a>
  <a class="close-chat chat-options" href="<%= root_url %>">
    X
  </a>
</section>

</header>

<article class"chat-window-body">

  <section class="chat-messages">
    <ul class="messages-list">
      <% @messages.each do |message| %>
        <%= "#{message.user.name}: #{message.content}" %><br>
      <% end %>
    </ul>
  </section>

  <form action="<%= messages_url(@chat) %>" method="post">
    <%= auth_token_input %>
    <textarea type="text"
              value=""
              name="message[content]"
              class="new-message">
    </textarea>
    <input type="submit" class="send-message-button" value="Send Message">
  </form>

</article>