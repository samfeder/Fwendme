<html>
<head>
  <title>Links</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
<% if signed_in? %>

<nav id="" class="group">
  <div class="user-menu-link"><%= current_user.name %></div>
  <ul class="user-menu">
    <li><%= link_to "Sign Out", session_url, :method => :delete %></li>
    <li><%= link_to "Edit Profile", edit_user_url(current_user) %></li>
  </ul>
</nav>

</header>
<br>
<%= link_to "Create New Chat", new_chat_url, class: "new-chat-button" %>
<aside id="chat-tray" class="group">
  <br><br>
  <%= render :partial => 'layouts/_chatlist' %>

  <strong>-- Rails Version --</strong>
  <%= render :partial => 'layouts/_chatlist2' %>
  <%= render :partial => 'layouts/_userlist' %>
</aside>

<main class="chat-window">
  <%= yield %>
  <%= render :partial => 'layouts/_errors' %>
</main>

<% else %>

<% if !signed_in? %>
  <%= render :partial => 'layouts/_errors' %>
<% end %>

<%= yield %>

<% end %>

</body>

</html>
