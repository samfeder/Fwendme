<html>
<head>
  <title>Links</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if signed_in? %>
  <%= current_user.email %>
  <%= button_to "Sign Out", session_url, :method => :delete %>
  <%= link_to "Edit Profile", edit_user_url(current_user) %>
  <%= render :partial => 'layouts/_chatlist' %>
<% else %>
  <%= link_to "Sign In", new_session_url %>
  <%= link_to "Sign Up", new_user_url %>
<% end %>
<br>

<%= render :partial => 'layouts/_errors' %>

<%= yield %>

</body>
</html>
